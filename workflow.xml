<tool id='sl_core' name='sl_core'>
  <command interpreter='bash'>workflow.sh</command>
  <inputs>
    <section name='repos' type='section' title='Repositories, branches, and resources' expanded='true'>
      <param name='ml_arch_repo' label='ML archive repository' type='text' value='git@github.com:parallelworks/dynamic-learning-rivers' width='50%_none%' optional='false' help='This repo MUST be prefixed with an SSH auth, e.g. git@github.com:org/repo, so deploy keys can SSH authenticate a push back to the source.'>
      </param>
      <param name='ml_arch_branch' label='ML archive BRANCH' type='text' value='test-branch' width='50%_node%' optional='false'>
      </param>
      <param name='ml_code_repo' label='ML code repository' type='text' value='https://github.com/parallelworks/sl_core' width='50%_none%' optional='false'>
      </param>
      <param name='ml_data_repo' label='ML data repository' type='text' value='https://github.com/parallelworks/global-river-databases' width='50%_none%' optional='false'>
      </param>
      <param name='whost' label='Workflow host (cluster name)' type='text' value='cloud' width='50%_none%' optional='false'>
      </param>
    </section>
    <section name='superlearner' type='section' title='SuperLearner configuration' expanded='true'>
      <param name='data' label='Data [.csv] [Inputs, Outputs]' type='data' help='The header contains the parameter names and the inputs must occupy the first columns'  format='csv' width='50%' optional='true'>
      </param>
      <param name='num_inputs' label='Number of inputs' type='text' value='9' width='25%' optional='true'>
      </param>
      <param name='superlearner_conf' label='MIMOSuperLearner configuration' type='data' help='MIMOSuperLearner configuration'  format='py' width='50%_none%' optional='true'>
      </param>
      <param name="hpo" type="boolean" truevalue="Yes" falsevalue="No" checked="false" label="Run hyperparameter optimization?" help='Select yes for hyperparameter tuning' width="25%"  optional='true' float="right">
      </param>
      <param name="cross_val_score" type="boolean" truevalue="Yes" falsevalue="No" checked="false" label="Run cross-validation?" help='Select yes to run cross-validation on the entire data set' width="25%_none%"  optional='true' float="right">
      </param>
      <param name='backend' type='select' label='Joblib backend' width='50%' help='Select Backend' multiple='false'>
	<option value="loky" >loky</option>
	<option value="multiprocessing">multiprocessing</option>
	<option value="threading" selected="true">threading</option>
	<option value="dask">dask</option>
      </param>
      <param name='n_jobs' label='Number parallel jobs' type='integer' min='1' max='100' value='4' width='25%' optional='true'>
      </param>
      <param name='model_dir' label='Model directory' type='text' value='./model_dir' width='50%' optional='true'>
      </param>
    </section>
  </inputs>
  <outputs>
  </outputs>
</tool>
